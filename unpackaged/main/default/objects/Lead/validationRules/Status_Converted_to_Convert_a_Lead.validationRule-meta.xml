<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_Converted_to_Convert_a_Lead</fullName>
    <active>true</active>
    <errorConditionFormula>AND(IsConverted , NOT( CONTAINS( TEXT(Status) , 'Converted')))</errorConditionFormula>
    <errorMessage>Please select Lead Status to one of the 'Converted' value before converting the Lead.</errorMessage>
</ValidationRule>
