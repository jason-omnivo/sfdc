<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Owner_1_SSN</fullName>
    <active>true</active>
    <description>Owner 1 SSN is valid.</description>
    <errorConditionFormula>NOT(
OR(
ISBLANK( SSN_1__c ),
REGEX( SSN_1__c , "[0-9]{3}-?[0-9]{2}-?[0-9]{4}")
)
)</errorConditionFormula>
    <errorDisplayField>SSN_1__c</errorDisplayField>
    <errorMessage>Please enter SSN in 999-99-9999 format.</errorMessage>
</ValidationRule>
